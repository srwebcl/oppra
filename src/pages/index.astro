---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ServiceCard from "../components/ServiceCard.astro";
import StatsSection from "../components/StatsSection.astro";
import HomeContactSection from "../components/HomeContactSection.astro";
import WhyChoose from "../components/WhyChoose.astro";
---

<BaseLayout
	title="OPPRA Industrial | Maestranza y Servicios Industriales"
	description="Expertos en mantenimiento industrial en RM, Viña del Mar, Rancagua y Los Andes. Diseño mecánico, fabricación de piezas y tableros eléctricos."
>
	<Hero
		title="Ingeniería y Mantenimiento Industrial de Precisión"
		subtitle="Maximizamos la disponibilidad de sus equipos críticos. Servicios especializados para plantas en Región Metropolitana, Valparaíso y O'Higgins."
		ctaText="Cotizar Proyecto"
		useSlider={true}
	/>

	<StatsSection />

	{/* Solutions Section - Enhanced Spacing */}
	<section class="py-24 bg-slate-50 relative overflow-hidden">
		{/* Subtle background pattern */}
		<div
			class="absolute inset-0 opacity-[0.03] pointer-events-none"
			style="background-image: radial-gradient(#1e3a8a 1px, transparent 1px); background-size: 32px 32px;"
		>
		</div>

		<div class="container-custom relative z-10">
			<div class="text-center max-w-3xl mx-auto mb-20 animate-on-scroll">
				<span
					class="inline-block py-1 px-3 rounded-full bg-blue-100 text-primary font-semibold text-sm mb-4 tracking-wide uppercase"
				>
					Servicios Especializados
				</span>
				<h2
					class="text-4xl lg:text-5xl font-extrabold mb-6 text-slate-900"
				>
					Nuestras <span class="text-accent">Soluciones</span>
				</h2>
				<p
					class="text-lg text-slate-600 leading-relaxed max-w-2xl mx-auto"
				>
					Estrategias de mantenimiento correctivo y preventivo
					diseñadas para <span class="font-bold text-primary"
						>evitar paradas no programadas</span
					> en su línea de producción.
				</p>
			</div>

			<div
				class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-16 max-w-6xl mx-auto"
			>
				<div class="h-full animate-on-scroll delay-100">
					<ServiceCard
						title="Diseño y Fabricación Mecánica"
						description="Recuperación de piezas críticas, ejes, bujes y componentes de transmisión. Soldadura certificada y mecanizado de precisión en tiempo récord."
						slug="diseno-fabricacion"
						image="/images/service_mechanical.png"
					/>
				</div>
				<div class="h-full animate-on-scroll delay-200">
					<ServiceCard
						title="Tableros Eléctricos y Control"
						description="Armado y certificación de tableros de fuerza. Diagnóstico de fallas en sistemas de automatización y normalización eléctrica según pliego técnico RIC."
						slug="tableros-electricos"
						image="/images/service_electrical.png"
					/>
				</div>
			</div>
		</div>
	</section>

	{/* Why Choose Section - New Component */}
	<WhyChoose />

	{/* Contact CTA Section - Enhanced Component */}
	<HomeContactSection />
</BaseLayout>
